@model DateTime?
<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@(Model > DateTime.MinValue || Model.HasValue ? Model.Value.ToString("M/d/yyyy h:mm:ss tt") : "")" />
<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDateTimePicker({
            parseFormats: ["M/d/yyyy h:mm:ss tt"],
        });
    });
</script>