@model DateTime
@using System.Globalization
<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@((Model > DateTime.MinValue ? Model : DateTime.Today).ToString("HH:mm"))" />
<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoTimePicker({ format: "HH:mm" });
    });
   
</script>